# GitHub API Configuration
GITHUB_TOKEN=your_github_personal_access_token_here
GITHUB_API_BASE_URL=https://api.github.com

# Target repositories for data collection
TARGET_REPOS=tiangolo/fastapi,psf/requests,pydantic/pydantic

# Data collection settings
MAX_PRS_PER_REPO=100
MIN_REVIEW_COMMENTS=3
DAYS_LOOKBACK=365

# LLM Configuration (choose one or multiple)
# Option 1: OpenAI
OPENAI_API_KEY=your_openai_key_here
OPENAI_MODEL=gpt-4o-mini

# Option 2: Anthropic Claude
ANTHROPIC_API_KEY=your_anthropic_key_here
ANTHROPIC_MODEL=claude-3-haiku-20240307

# Option 3: OpenRouter (access to free models)
OPENROUTER_API_KEY=your_openrouter_key_here
OPENROUTER_MODEL=mistralai/mistral-7b-instruct

# Option 4: Local Ollama (no API key needed)
USE_LOCAL_OLLAMA=false
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=codellama

# Vector Database Configuration
VECTOR_DB_TYPE=chromadb  # chromadb or faiss
CHROMADB_PATH=./data/embeddings/chromadb
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Application Settings
LOG_LEVEL=INFO
DATA_DIR=./data
CACHE_DIR=./cache

# Streamlit Configuration (Week 4+)
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=localhost

# Feature Flags
ENABLE_CACHING=true
ENABLE_METRICS=true
DEBUG_MODE=false